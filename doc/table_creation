create database monroeminutes;

create table wordfrequency (wordfrequencyid int not null auto_increment primary key, documentid int not null, word text, frequency int);

create table documents (documentid int not null auto_increment primary key, suborganizationid int not null, sourceurl text not null, documentdate date not null, scrapedate date not null, name text not null, documenttext text not null);

create table organizations (organizationid int not null auto_increment primary key, name text, type text not null);

create table suborganizations (suborganizationid int not null auto_increment primary key, organizationid int, name text, websiteurl text, documentsurl text, scriptname text, dbpopulated bool);
	
create table users( userid int not null auto_increment primary key, displayname text not null, username text not null, passwordhash text not null, permissionsid int not null);

create table permissions( permissionsid int not null auto_increment primary key, canlogin bool not null, isadmin bool not null, enabled bool not null);

create table searches( searchid int not null auto_increment primary key, keyword text, suborganizationid int, date datetime);

create table requests( requestid int not null auto_increment primary key, name text not null, url text not null, notes text not null, userid int not null);
